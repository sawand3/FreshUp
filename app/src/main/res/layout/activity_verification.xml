<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.verification">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/loginbackgrond_"
        android:scaleType="fitXY"
        ></ImageView>

    <ImageView
        android:id="@+id/img12"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/loginlogo"
        android:scaleType="fitXY"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img12">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/img12">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="60dp"
            android:clipToPadding="true"
            app:cardCornerRadius="10dp"

            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">


                <TextView
                    android:id="@+id/tv_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="VERIFICATION"
                    android:textColor="@color/lightyellow"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tv_verify1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_verify"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:text="Enter Your Verification Code"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_verify1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:id="@+id/verifyotp"
                    >

                    <EditText
                        android:id="@+id/otp1"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:maxLength="1"
                        android:background="@drawable/roundotp"
                        android:layout_marginBottom="20dp"
                        android:textAlignment="center"
                        android:textColor="@color/lightyellow"
                        android:elevation="1dp"/>


                    <EditText
                        android:id="@+id/otp2"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:maxLength="1"
                        android:background="@drawable/roundotp"
                        android:layout_marginLeft="15dp"
                        android:textAlignment="center"
                        android:textColor="@color/lightyellow"
                        android:elevation="1dp"/>

                    <EditText
                        android:id="@+id/otp3"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:maxLength="1"
                        android:background="@drawable/roundotp"
                        android:layout_marginLeft="15dp"
                        android:textAlignment="center"
                        android:textColor="@color/lightyellow"
                        android:elevation="1dp"/>

                    <EditText
                        android:id="@+id/otp4"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:maxLength="1"
                        android:background="@drawable/roundotp"
                        android:layout_marginLeft="15dp"
                        android:textAlignment="center"
                        android:textColor="@color/lightyellow"
                        android:elevation="1dp"/>


                </LinearLayout>

                <Button
                    android:id="@+id/btnverify"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@+id/verifyotp"
                    android:background="@drawable/roundbtn"
                    android:text="Verify"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:layout_centerHorizontal="true"

                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resend verification Code "
                    android:id="@+id/resend"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:layout_below="@id/btnverify"
                    android:layout_marginBottom="10dp"
                    />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>