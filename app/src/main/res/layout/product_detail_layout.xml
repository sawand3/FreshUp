<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/buy_product_layout"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:foregroundGravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/white"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="10dp"
                android:src="@drawable/product_1"
                android:id="@+id/hairwaxProductDetail"
                android:layout_centerHorizontal="true"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="This is Hairwax Product"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/productNameDetail"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Natural Shine, Flexible Hold)"
                android:textSize="10sp"
                android:gravity="center"
                android:id="@+id/product_detail"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hair Care"
                android:textSize="10sp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="$39.00"
                android:textSize="13sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/product_Price"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="BUY"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/buy_button_bg"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/buy_product"
                />

        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>